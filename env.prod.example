# Production environment template.
# Copy to `env` (gitignored) on the production server and replace CHANGE_ME values.

# Target Container Tags
IMAGE_TAG="v0.16.20"
UI_IMAGE_TAG="v0.16.0-alpha.0"

# gRPC Services
CORE_GRPC_PORT="55152"
DB_GRPC_PORT="55160"
ROUTER_GRPC_PORT="55161"
AUTHN_GRPC_PORT="55162"
AUTHZ_GRPC_PORT="55169"

# API Settings
ADMIN_HTTP_PORT="3030"
ADMIN_SOCKET_PORT="3031"
ADMIN_DEFAULT_HOST_URL="https://admin.example.com"
CLIENT_HTTP_PORT="3000"
CLIENT_SOCKET_PORT="3001"
CLIENT_DEFAULT_HOST_URL="https://api.example.com"
UI_PORT="8080"

# Database Engine
# Prefer a dedicated/managed DB for production.
DB_TYPE="mongodb"
DB_USER="conduit"
DB_PASS="CHANGE_ME"
DB_PORT="27017"
DB_CONN_URI="mongodb://conduit:CHANGE_ME@conduit-mongo:27017/conduit?authSource=admin"  # profile: mongodb

# Security
CORE_MASTER_KEY="CHANGE_ME"
GRPC_KEY="CHANGE_ME"

# Metrics & Logs
PROMETHEUS_PORT="9090"
LOKI_PORT="3100"

# Miscallenous
COMPOSE_PROJECT_NAME="conduit-prod"

